<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/veryLightBlue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/textViewTrainType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tip voza"
                    android:paddingStart="8dp"
                    android:paddingEnd="5dp"/>

                <TextView
                    android:id="@+id/textViewTrainNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj voza"
                    android:padding="5dp" />

                <Space
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Putuje:"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textViewTravelTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginEnd="10dp"
                    android:text="x minuta"
                    android:textStyle="bold"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewDeparture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polazak"
                    android:textSize="27sp"
                    android:layout_marginStart="40dp"
                    android:padding="3dp"
                    android:layout_gravity="end"/>

                <Space
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow"
                    android:layout_gravity="center_vertical" />

                <Space
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textViewArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="40dp"
                    android:padding="3dp"
                    android:text="Dolazak"
                    android:textSize="27sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/textViewDepartureDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="datum polaska"
                    android:layout_marginStart="40dp"/>

                <Space
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textViewArrivalDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="datum dolaska"
                    android:layout_marginEnd="40dp" />


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>